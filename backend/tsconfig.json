{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["webpack-env"],
    "typeRoots": ["./typings/", "./node_modules/@types"],
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "sequelize.config.js",
    "src/**/*.ts",
    "global.d.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
